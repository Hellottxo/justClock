.flip {
  margin: 0 10rpx;
  height: 300rpx;
  width: 420rpx;
  border-radius: 50rpx;
  color: #ccc;
  font-size: 240rpx;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  text-align: center;
  position: relative;
}

.num {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  background-color: #131313;
  overflow: hidden;
  box-sizing: border-box;
}

.num-top {
  top: 0;
  bottom: 50%;
  border-radius: 50rpx 50rpx 0 0;
  border-bottom: 2Ã¥rpx solid #000;
  line-height: 300rpx;
}

.num-bottom {
  top: 50%;
  bottom: 0;
  content: '';
  border-radius: 0 0 50rpx 50rpx;
  line-height: 0;
  border-top: 2rpx solid #000;
}

.flip.down .front .num-top {
  z-index: 3;
}

.flip.down .back .num-bottom {
  z-index: 2;
}

.flip.down .front .num-bottom,
.flip.down .back .num-top {
  z-index: 1;
}

.flip.down .back .num-bottom {
  z-index: 2;
  transform-origin: 50% 0;
  transform: perspective(160px) rotateX(180deg);
}

.flip.down.go .front .num-top {
  animation: frontFlip .6s ease-in-out;
  transform-origin: 50% 100%;
  backface-visibility: hidden;
}

.flip.down.go .back .num-bottom {
  animation: backFlip .6s ease-in-out;
}

@keyframes frontFlip {
  from {
    transform: rotateX(0deg);
  }

  to {
    transform: rotateX(-180deg);
  }
}

@keyframes backFlip {
  from {
    transform: rotateX(180deg);
  }

  to {
    transform: rotateX(0deg);
  }
}